---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { cn } from '@/lib/utils'

const photos = [
  {
    src: '/images/photography/placeholder-1.jpg',
    alt: 'Photography placeholder 1',
    title: 'Photography Title 1',
    description: 'A beautiful photograph taken during a sunset',
  },
  {
    src: '/images/photography/placeholder-2.jpg',
    alt: 'Photography placeholder 2',
    title: 'Photography Title 2',
    description: 'A stunning landscape captured in the morning',
  },
  {
    src: '/images/photography/placeholder-3.jpg',
    alt: 'Photography placeholder 3',
    title: 'Photography Title 3',
    description: 'A candid moment frozen in time',
  },
]
---

<BaseLayout>
  <div class="container mx-auto py-12">
    <h1 class="text-4xl font-bold mb-8">My Photography</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {photos.map((photo) => (
        <div class="group relative">
          <img
            src={photo.src}
            alt={photo.alt}
            class="w-full h-64 object-cover rounded-lg shadow-lg transition-transform group-hover:scale-105"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-70 transition-opacity duration-300"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <h3 class="text-xl font-semibold text-white mb-2">{photo.title}</h3>
            <p class="text-white/80 text-center">{photo.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
