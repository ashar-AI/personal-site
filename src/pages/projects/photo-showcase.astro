---
import { BentoPhotoCard } from '@/components/bento/BentoPhotoCard';
import type { Photo } from '@/types/photo';

// Example photos with more reliable image sources
const examplePhotos: Photo[] = [
  {
    src: 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?w=800&auto=format&fit=crop',
    alt: 'Mountain landscape',
    title: 'Mountain View',
    width: 800,
    height: 600,
  },
  {
    src: 'https://images.unsplash.com/photo-1519046904884-53103b34b206?w=800&auto=format&fit=crop',
    alt: 'Ocean waves',
    title: 'Ocean Breeze',
    width: 800,
    height: 600,
  },
  {
    src: 'https://images.unsplash.com/photo-1448375240586-882707db888b?w=800&auto=format&fit=crop',
    alt: 'Forest path',
    title: 'Forest Trail',
    width: 800,
    height: 600,
  }
];
---

<div class="min-h-screen bg-gray-50 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Photo Showcase</h1>
      <p class="text-xl text-gray-600">Interactive photo stack with draggable cards</p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <BentoPhotoCard
        title="Nature Collection"
        description="A beautiful collection of nature photographs"
        photos={examplePhotos}
        className="h-[500px]"
      />
      <div class="space-y-8">
        <BentoPhotoCard
          title="Mountain Views"
          description="Stunning mountain landscapes"
          photos={[examplePhotos[0]]}
          className="h-[300px]"
        />
        <BentoPhotoCard
          title="Ocean & Forest"
          description="Serene ocean and forest scenes"
          photos={[examplePhotos[1], examplePhotos[2]]}
          className="h-[300px]"
        />
      </div>
    </div>
  </div>
</div>
