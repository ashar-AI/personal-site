---
import { getCustomTransition } from '@/lib/customTransition'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class={`relative overflow-hidden rounded-2xl border border-zinc-800 bg-gradient-to-br from-zinc-900/50 to-zinc-800/30 p-8 backdrop-blur-sm ${className}`}>
  <div class='pointer-events-none absolute -left-12 -top-12 h-24 w-24 rounded-full bg-emerald-500/20 blur-3xl' />
  <div class='pointer-events-none absolute -right-12 -bottom-12 h-24 w-24 rounded-full bg-purple-500/20 blur-3xl' />
  
  <div class='relative z-10 text-center'>
    <div class='mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-emerald-500 to-purple-600 text-white'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        width='32'
        height='32'
        viewBox='0 0 24 24'
        fill='none'
        stroke='currentColor'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='h-6 w-6'
      >
        <path d='M12 20h9' />
        <path d='M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z' />
        <path d='m15 5 3-3' />
      </svg>
    </div>
    
    <h3 class='mb-2 text-xl font-bold text-white'>Blog Under Construction</h3>
    <p class='mb-6 text-zinc-400'>I'm currently crafting some amazing content for you. The blog is being built with care and attention to detail.</p>
    
    <div class='inline-flex items-center justify-center gap-2 rounded-full bg-zinc-800 px-4 py-2 text-sm text-zinc-300'>
      <span class='relative flex h-2 w-2'>
        <span class='absolute inline-flex h-full w-full animate-ping rounded-full bg-emerald-400 opacity-75' />
        <span class='relative inline-flex h-2 w-2 rounded-full bg-emerald-500' />
      </span>
      <span>Coming soon</span>
    </div>
  </div>
  
